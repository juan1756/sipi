@model SIPI.Presentation.Website.Areas.Admin.Models.Pedidos.IndexFiltros
@{
    ViewBag.Title = "Operador";
}

<article class="content items-list-page">
    <div class="title-block">
        <h3 class="title">Pedidos</h3>
    </div>
    <section class="section">
        <form action="@Url.Action("index", "pedidos", new { area = "admin" })">
            <div class="form-group row">
                <div class="col-md-8">
                    <div class="row">
                        <label class="col-md-3 form-control-label">MIEMBRO</label>
                        <div class="col-md-5">
                            @Html.TextBoxFor(x => x.Miembro, new { @class="form-control boxed" })
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-md-1 form-control-label">FECHA</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(x => x.Desde, "{0:dd/MM/yyyy}", new { @class = "form-control boxed", data_apply="datepicker" })
                        </div>
                        <label class="col-md-1 form-control-label">A</label>
                        <div class="col-md-3">
                            @Html.TextBoxFor(x => x.Hasta, "{0:dd/MM/yyyy}", new { @class = "form-control boxed", data_apply = "datepicker" })
                        </div>
                    </div>
                </div>
            </div>
            <button type="submit">Buscar</button>
        </form>
    </section>
    <section class="section">
        <table class="table fixed-table-pagination table-striped table-bordered table-hover"
               data-toggle="table"
               data-url='@Url.Table("index","pedidos", new { area = "admin" })'
               data-search="false"
               data-pagination="true"
               data-page-list="[10, 25, 50, 100]"
               data-side-pagination="server">
            <thead>
                <tr>
                    <th data-field="temas">TEMAS</th>
                    <th data-field="miembro">MIEMBRO</th>
                    <th data-field="cantidadPedido" data-align="center">CANTIDAD</th>
                    <th data-field="fechaPedido" data-formatter="app.tables.dateFormat" data-align="center">FECHA</th>
                    <th data-field="estado" data-align="center">ESTADO</th>
                    <th data-field="estadoSiguiente" data-align="center">PASAR A</th>
                </tr>
            </thead>
        </table>
    </section>
</article>