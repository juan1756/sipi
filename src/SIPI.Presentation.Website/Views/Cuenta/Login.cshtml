@model SIPI.Presentation.Website.Models.Cuenta.LoginModel
@{
    ViewBag.Title = "Home Page";
    Html.SetValidationSummaryMessageElement("span");
}

<div class="auth">
    <div class="auth-container">
        <div class="card">
            <header class="auth-header">
                <h1 class="auth-title">
                    <div><img class="logo" src="assets/logo.png" alt="logo" /></div>Iglesia Calle Brasil
                </h1>
            </header>
            <div class="auth-content">
                <p class="text-xs-center">BIENVENIDO</p>
                <form action='@Url.Action("login","cuenta", new { returnUrl = Request.QueryString["returnUrl"], area = "" })'
                      method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control underlined", placeholder = "E-mail" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.Contrasena, new { @class = "form-control underlined", placeholder = "Contraseña" })
                        @Html.ValidationMessageFor(m => m.Contrasena)
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-block btn-primary">Ingresar</button>
                    </div>
                    <div class="form-group has-error">
                        @Html.ValidationSummary(excludePropertyErrors: true)
                    </div>
                    <div class="form-group">
                        <p class="text-muted text-xs-center"><a href="registrarse.html">Registrarse</a></p>
                        <p class="text-muted text-xs-center"><a href="recordarContrasenia.html">Recuperar contraseña</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>