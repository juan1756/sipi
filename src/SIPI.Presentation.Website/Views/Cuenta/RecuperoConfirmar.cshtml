@model SIPI.Presentation.Website.Models.Cuenta.RecuperoConfirmarModel
@{
    ViewBag.Title = "Home Page";
}

<form action='@Url.Action("recuperoconfirmar","cuenta", new { token = Request.QueryString["token"], area = "" })' method="post">
    @Html.AntiForgeryToken()
    @Html.TextBoxFor(m => m.Email)
    @Html.PasswordFor(m => m.Contrasena)
    @Html.PasswordFor(m => m.ConfirmarContrasena)
    <input type="submit" value="Cambiar contraseña" />
</form>