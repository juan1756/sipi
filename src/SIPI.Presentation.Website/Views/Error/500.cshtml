@{
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
    ViewBag.Title = "Error interno del servidor";
}

<div class="app blank sidebar-opened">
    <article class="content">
        <div class="error-card global">
            <div class="error-title-block">
                <h1 class="error-title">500</h1>
                <h2 class="error-sub-title"> Error interno del servidor </h2>
            </div>
            <div class="error-container">
                <p>Intente recargar la página nuevamente,<br />o contáctese con el administrador</p> <a class="btn btn-primary" href="@Url.PreviousLocalOrHome()">
                    <i class="fa fa-angle-left"></i>
                    Volver
                </a>
            </div>
        </div>
    </article>
</div>

@section scripts{
    <script>
        $(function () {
            animate({
                name: 'flipInY',
                selector: '.error-card > .error-title-block'
            });

            setTimeout(function () {
                var $el = $('.error-card > .error-container');

                animate({
                    name: 'fadeInUp',
                    selector: $el
                });

                $el.addClass('visible');
            }, 1000);
        });
    </script>
}