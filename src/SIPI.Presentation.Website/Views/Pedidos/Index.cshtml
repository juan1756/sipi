@{
    ViewBag.Title = "Mis pedidos";
}

<article class="content items-list-page">
    <div class="title-search-block">
        <div class="title-block">
            <div class="row">
                <div class="col-md-6">
                    <h3 class="title">Listado de pedidos</h3>
                </div>
            </div>
        </div>
    </div>
    <table class="table fixed-table-pagination table-striped table-bordered table-hover"
               data-toggle="table"
               data-url='@Url.Table("index","pedidos", new { area = "" })'
               data-search="false"
               data-pagination="true"
               data-page-list="[10, 25, 50, 100]"
               data-side-pagination="server">
        <thead>
            <tr>
                <th data-field="temas" data-formatter="app.tables.temasFormatter">Temas</th>
                <th data-field="cantidadPedido" data-align="center">Cant</th>
                <th data-field="fechaPedido" data-formatter="app.tables.dateFormat" data-align="center">Fecha Pedido</th>
                <th data-field="fechaEntregado" data-formatter="app.tables.dateFormat" data-align="center">Fecha Entrega</th>                
                <th data-field="estado" data-align="center">Estado</th>
            </tr>            
        </thead>
    </table>
</article>