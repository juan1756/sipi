@{
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
}

<div class="main-wrapper">
    <div class="app no-sidebar" id="app">
        <header class="header no-sidebar">
            <div class="sidebar-header">
                <div class="brand brand-header">
                    <a href="@Url.Action("index", "home", new { area = "" })">
                        <div>
                            <img class="logo-image" src="@Url.Content("~/content/assets/logo.png")" alt="logo" />
                            <div class="pull-right logo-text">Iglesia Calle Brasil</div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="header-block header-block-nav">
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="nav-profile">
                        <li class="profile dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="javascript:void(0)" role="button" aria-haspopup="true" aria-expanded="false">
                                <div class="img" style="background-image: url('@Url.Content($"~/content/assets/faces/{this.Usuario().NombreArchivoAvatar}")')"> </div> <span class="name">
                                    Bienvenido, @this.Usuario().Nombre @this.Usuario().Apellido
                                </span>
                            </a>
                            <div class="dropdown-menu profile-dropdown-menu" aria-labelledby="dropdownMenu1">
                                <a class="dropdown-item" href="@Url.Action("index", "pedidos", new { area = "" })">
                                    <i class="fa fa-shopping-cart icon"></i>
                                    Mis pedidos
                                </a>
                                <a class="dropdown-item" href="@Url.Action("index", "catalogo", new { area = "" })">
                                    <i class="fa fa-play icon"></i>
                                    Catálogo multimedial
                                </a>
                                <a class="dropdown-item" href="@Url.Action("logout", "cuenta", new { area = "" })">
                                    <i class="fa fa-power-off icon"></i>
                                    Cerrar sesión
                                </a>
                            </div>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="nav-profile">
                        <li class="profile dropdown">
                            <a class="nav-link navbar-toggle" data-toggle="dropdown" href="javascript:void(0)" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-bars"></i>
                            </a>
                            <div class="dropdown-menu profile-dropdown-menu" aria-labelledby="dropdownMenu1">
                                <a class="dropdown-item" href="@Url.Action("registro", "cuenta", new { area = "" })">
                                    <i class="fa fa-user icon"></i>
                                    Registrarse
                                </a>
                                <a class="dropdown-item" href="@Url.Action("login", "cuenta", new { area = "" })">
                                    <i class="fa fa-sign-in icon"></i>
                                    Iniciar sesión
                                </a>
                            </div>
                        </li>
                    </ul>
                }
            </div>
        </header>

        @RenderBody()

        <footer class="footer no-sidebar">
            <div class="footer-block author">
                Iglesia Calle Brasil | 2017
            </div>
        </footer>

        @RenderSection("modals", required: false)
    </div>
</div>

@section templates {
    @RenderSection("templates", required: false)
}

@section scripts{
    @RenderSection("scripts", required: false)
}